<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat_client.controller.CreateGroupController">
    <AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #eef8ff;">
        <TextField fx:id="title" layoutX="121.0" layoutY="65.0" prefHeight="25.0" prefWidth="178.0" style="-fx-border-color: #2ca8ff;">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
        <TextArea fx:id="description" layoutX="99.0" layoutY="207.0" prefHeight="231.0" prefWidth="200.0" style="-fx-border-color: #2ca8ff;">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextArea>
        <Text layoutX="93.0" layoutY="83.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Title: " />
        <Text layoutX="166.0" layoutY="195.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description:" />
        <Text layoutX="93.0" layoutY="146.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Type:" />
        <RadioButton fx:id="t_private" layoutX="145.0" layoutY="133.0" mnemonicParsing="false" text="Private">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></RadioButton>
        <RadioButton fx:id="t_public" layoutX="220.0" layoutY="133.0" mnemonicParsing="false" text="Public">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></RadioButton>
        <Button fx:id="create" layoutX="174.0" layoutY="486.0" mnemonicParsing="false" onMouseClicked="#createGroup" style="-fx-border-color: #2ca8ff; -fx-border-radius: 3; -fx-background-color: #cff1ff" text="Create">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </AnchorPane>
</Scene>
